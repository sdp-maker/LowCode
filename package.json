{
  "name": "low-code",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:builder": "pnpm --filter builder run dev",
    "dev:runner": "pnpm --filter runner run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix apps/builder/src/**/*.{js,jsx,ts,tsx,vue}",
    "lint:style": "stylelint --fix apps/builder/src/**/*.{css,scss}",
    "spell": "npx cspell \"apps/builder/src/**/*.{js,jsx,ts,tsx,vue,css,scss,md}\"",
    "spell:check": "npx cspell \"apps/builder/src/**/*.{js,jsx,ts,tsx,vue,css,scss,md}\" --no-must-find-files",
    "commit": "cz-git",
    "commitlint": "npx commitlint --edit",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,css,scss,md}": [
      "pnpm run lint",
      "pnpm run lint:style",
      "pnpm run spell:check"
    ]
  },
  "keywords": [],
  "author": "sdp",
  "license": "MIT",
  "dependencies": {
    "npm": "^11.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.7.0",
    "@typescript-eslint/parser": "^7.16.1",
    "commitizen": "^4.3.0",
    "cspell": "9.2.1",
    "cz-git": "^1.10.1",
    "eslint": "9.7.0",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-vue": "^9.27.0",
    "globals": "^15.8.0",
    "husky": "^9.1.7",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "vue-eslint-parser": "^9.4.2",
    "lint-staged": "^15.2.10"
  }
}
